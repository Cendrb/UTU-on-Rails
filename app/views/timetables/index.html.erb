<h1>Listing timetables</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Baka account</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timetables.each do |timetable| %>
      <tr>
        <td><%= timetable.name %></td>
        <td><%= timetable.baka_account.name %></td>
        <td><%= timetable.group %></td>
        <td><%= link_to 'Zobrazit', timetable %></td>
        <td><%= link_to 'Upravit', edit_timetable_path(timetable) %></td>
        <td><%= link_to 'Odstranit', timetable, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

