<table class="timetable">

	<% timetable.school_days.current_week_days.each do |day| %>
		<%= render day, date: true, blank_hours: true %>
	<% end %>

</table>

<table class="timetable">

	<% timetable.school_days.next_week_days.each do |day| %>
		<%= render day, date: true, blank_hours: true %>
	<% end %>

</table>