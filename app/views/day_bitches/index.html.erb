<h1>Záznam hlasování</h1>

<table>
  <thead>
    <tr>
      <th>Datum</th>
      <th>Kurva</th>
      <th>Hlasující</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @day_bitches.each do |day_bitch| %>
      <tr>
        <td><%= day_bitch.date %></td>
        <td><%= day_bitch.bitch.name %></td>
        <td><%= day_bitch.user.name %></td>
        <td><%= link_to 'Zobrazit', day_bitch %></td>
        <td><%= link_to 'Upravit', edit_day_bitch_path(day_bitch) %></td>
        <td><%= link_to 'Smazat', day_bitch, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
