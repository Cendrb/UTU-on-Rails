<div class="exam">
    
    <% if logged_in? %>
        <% if exam.is_done? %>
            <%= button_to 'Obnovit', exam_reveal_path(exam), method: :post, class: 'hide_or_reveal' %>
        <% else %>
            <%= button_to 'Skrýt', exam_hide_path(exam), method: :post, class: 'hide_or_reveal' %>
        <% end %>
    <% end %>

    <h3><%= link_to exam.title, exam_path(exam), method: :get %></h3>
    
    <p>
        <%= sanitize(exam.description) %>
    </p>
    
    <p>
        <strong>Předmět: </strong>
        <%= exam.subject.name %>
    </p>
    
    <p>
        <strong>Datum: </strong>
        <%= l exam.date %>
    </p>
    
    <p>
        <strong>Skupina: </strong>
        <% if exam.group == 0 %>
            obě skupiny
        <% else %>
            <%= exam.group %>.
        <% end %>
    </p>
    
    <% if !exam.additional_info_url.nil? && !exam.additional_info_url.empty? %>
        <p>
            <%= link_to "Další informace", exam.additional_info_url %>
        </p>
    <% end %>
</div>
