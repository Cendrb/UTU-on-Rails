<% random = rand(36**10).to_s(36) %>
$("#main").append("<div class=\"dialog\" data-identifier=\"<%= random %>\"></div>");

<% @exams.each do |exam| %>
	$(".dialog[data-identifier='<%= random %>']").append("<%= escape_javascript(render partial: "exams/exam", locals: {exam: exam, no_hide: true}) %>");
<% end %>

<% @tasks.each do |task| %>
	$(".dialog[data-identifier='<%= random %>']").append("<%= escape_javascript(render partial: "tasks/task", locals: {task: task, no_hide: true}) %>");
<% end %>

$(".dialog[data-identifier=<%= random %>]").dialog(
{
	close: function(event, ui){
		$(this).dialog("destroy").remove();
	},
	modal: true,
	resizable: false,
	draggable: false,
	dialogClass: "timetable_dialog",
	close: function(event, ui) { $('#wrap').show(); },
	open: function(event, ui) { $('.ui-widget-overlay').bind('click', function () { $(this).siblings('.ui-dialog').find('.ui-dialog-content').dialog('close'); }); }
});