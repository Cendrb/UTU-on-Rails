<h1>Seznam úkolů</h1>

<%= link_to 'Nový úkol', new_task_path %>

<table>
  <thead>
    <tr>
      <th>Název</th>
      <th>Popis</th>
      <th>Předmět</th>
      <th>Více informací</th>
      <th>Datum</th>
      <th>Skupina</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.subject %></td>
        <td><%= task.additional_info_url %></td>
        <td><%= task.date %></td>
        <td><%= task.group %></td>
        <td><%= link_to 'Zobrazit', task %></td>
        <td><%= link_to 'Upravit', edit_task_path(task) %></td>
        <td><%= link_to 'Odstranit', task, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
        <td><%= link_to 'Převést na test', task_transform_to_exam_path(task), data: { confirm: 'Jste si jisti?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

