<div id="details">
    <table class="details">
        <tr>
            <td class="details_block">
            <div class="details_block">
                <h2>Události</h2>
                <% @events.each do |e| %>
                <h3><%= e.title %></h3>
                <p>
                    <%= sanitize(e.description) %>
                </p>

                <p>
                    <strong>Místo: </strong>
                    <%= e.location %>
                </p>

                <p>
                    <strong>Začátek události: </strong>
                    <%= l e.event_start %>
                </p>

                <p>
                    <strong>Konec události: </strong>
                    <%= l e.event_end %>
                </p>
                
                <% if !e.additional_info_url.nil? && !e.additional_info_url.empty? %>
                <p><%= link_to "Další informace", e.additional_info_url %></p>
                <% end%>
                
                <% if e != @events.last %>
                <hr class="line_between_details" />
                <% end %>
                <% end %>
            </div></td>
            <td class="details_block" id="middle_detail_block" style="border-left: solid 5px #48b040">
            <div id="middle_detail_block" class="details_block">
                <h2>Úkoly</h2>
                <% @tasks.each do |e| %>

                <h3><%= e.title %></h3>
                <p>
                    <%= sanitize(e.description) %>
                </p>

                <p>
                    <strong>Předmět: </strong>
                    <%= e.subject %>
                </p>

                <p>
                    <strong>Datum: </strong>
                    <%= l e.date %>
                </p>

                <p>
                    <strong>Skupina: </strong>
                    <% if e.group == 0 %>
                    obě skupiny
                    <% else %>
                    <%= e.group %>.
                    <% end %>
                </p>
                <% if e != @tasks.last %>
                <hr class="line_between_details" />
                <% end %>
                <% end %>
            </div></td>
            <td class="details_block">
            <div class="details_block">
                <h2>Testy</h2>
                <% @exams.each do |e| %>

                <h3><%= e.title %></h3>
                
                <p>
                    <%= sanitize(e.description) %>
                </p>

                <p>
                    <strong>Předmět: </strong>
                    <%= e.subject %>
                </p>

                <p>
                    <strong>Datum: </strong>
                    <%= l e.date %>
                </p>

                <p>
                    <strong>Skupina: </strong>
                    <% if e.group == 0 %>
                    obě skupiny
                    <% else %>
                    <%= e.group %>.
                    <% end %>
                </p>
                
                <% if !e.additional_info_url.nil? && !e.additional_info_url.empty? %>
                <p><%= link_to "Další informace", e.additional_info_url %></p>
                <% end %>
                
                <% if e != @exams.last %>
                <hr class="line_between_details" />
                <% end %>
                <% end %>
            </div></td>
        </tr>
    </table>
</div>
