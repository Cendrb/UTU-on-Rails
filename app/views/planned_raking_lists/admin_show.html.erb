<% timetable = Timetable.timetable_for(@data[:list].subject, 0) %>

<p id="notice"><%= notice %></p>

<h2>Administrace <%= @data[:list].title %></h2>

<table class="stretch">
  <thead>
  <tr>
    <th>Jméno</th>
    <th>Téma</th>
    <th>Předpokládané datum zkoušení (nejhorší scénář)</th>
  </tr>
  </thead>
  <tbody id="planned_raking_entries_sortable">
  <% counter = 0.0 %>
  <% @data[:entries].each do |entry| %>
      <tr class="move_cursor">
        <td><%= entry.name %></td>
        <td><%= entry.description %></td>
        <td><%= format_date timetable.get_next_hour_for(@data[:list].subject, Date.today, counter.floor).school_day.date %></td>
      </tr>
  <% end %>
  </tbody>
</table>