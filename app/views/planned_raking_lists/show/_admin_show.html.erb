<%# timetable = Timetable.timetable_for(@data[:list].subject, 0) %>

<h3><%= round.number %>. kolo</h3>

<% if @data[:list].planned %>
<table class="stretch">
  <thead>
  <tr>
    <th>Jméno</th>
    <th>Téma</th>
    <th></th>
  </tr>
  </thead>
  <tbody id="planned_raking_entries_sortable">
  <% round.planned_raking_entries.order(:finished, :sorting_order).each do |entry| %>
      <tr class="move_cursor" data-entry-id="<%= entry.id %>">
        <td><%= entry.class_member.full_name %></td>
        <td><%= entry.description %></td>
        <td><%= entry.sorting_order %></td>
        <td><%= link_to "Vyhladit #{entry.class_member.full_name}", entry, method: :delete, data: { confirm: "Jako vážně? #{entry.class_member.full_name}" } %></td>
        <td><%= button_to "#{entry.class_member.full_name} byl/a již zkoušen/a", admin_show_planned_raking_entries_rekt_path, params: { id: entry.id }, remote: true if !entry.finished %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div id="planned_raking_list_status">Všechny změny uloženy</div>
<% else %>
    <table class="stretch">
      <thead>
      <tr>
        <th>Jméno</th>
        <th>Známka</th>
        <th>Datum zkoušení</th>
      </tr>
      </thead>
      <tbodys>
        <% round.planned_raking_entries.order(:finished, :sorting_order).each do |entry| %>
            <tr>
              <td><%= entry.class_member.full_name %></td>
              <td><%= entry.grade %></td>
              <td><%= format_date entry.created_at %></td>
              <td><%= link_to mi.edit, edit_planned_raking_entry_path(entry) %></td>
              <td><%= link_to "Vyhladit #{entry.class_member.full_name}", entry, method: :delete, data: {confirm: "Jako vážně? #{entry.class_member.full_name}"} %></td>
            </tr>
        <% end %>
      </tbodys>
    </table>
<% end %>