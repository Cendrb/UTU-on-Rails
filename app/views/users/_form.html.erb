<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "chyba", "chyby") %> zábranily vytvoření vašeho účtu:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Jméno (bude použito pro personalizaci zobrazení služby)' %><br>
    <%= f.number_field :name %>
  </div>
  <div class="field">
    <%= f.label :email, 'Email (bez vašeho svolení vám nebudou zasílány žádné maily)' %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, 'Heslo (pro heslo žádná omezení neplatí)' %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Potvrzení hesla' %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :group, 'Skupina (zadejte číselně - 1 nebo 2)' %><br>
    <%= f.number_field :group %>
  </div>
  <div class="actions">
    <%= f.submit 'Zaregistrovat' %>
  </div>
<% end %>
